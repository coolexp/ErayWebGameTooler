<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx"  width="260" height="30" creationComplete="itemrenderer1_creationCompleteHandler(event)"
				autoDrawBackground="true">
	<fx:Script>
		<![CDATA[
			import com.coolexp.managers.ExpToolerManager;
			
			import mx.events.FlexEvent;
			
			protected function itemrenderer1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				textLabel.text = data.name;
				valueLabel.text = data.value;
				if(data.value=="true"){
					valueCheck.selected = true;
				}else if(data.value=="false"){
					valueCheck.selected = false;
				}
			}
			
			protected function valueCheck_changeHandler(event:Event):void
			{
				// TODO Auto-generated method stub
				if(valueCheck.selected){
					valueLabel.text = "true"
				}else{
					valueLabel.text = "false";
				}
				ExpToolerManager.getInstance().updateCompileByKey(textLabel.text,valueLabel.text);
			}
			
		]]>
	</fx:Script>
	
	<s:BorderContainer backgroundColor="0x888888"  width="100%" height="100%">
		<s:Label id="textLabel" height="30"  paddingTop="10" />
		<s:Label id="valueLabel" x="200" y="0" height="30" paddingTop="10" />
		<s:CheckBox change="valueCheck_changeHandler(event)" id="valueCheck" x="234" y="4"/>
	</s:BorderContainer>
	
</s:ItemRenderer>
